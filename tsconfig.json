{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "allowJs": true
    // 删除 noEmit，确保输出 JS 文件
  },
  "include": ["api/**/*", "lib/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
